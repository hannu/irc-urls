<h2>Edit <%= resource_name.to_s.humanize %></h2>

<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <fieldset>
    <h2>Public profile information</h2>
    <div class="field"><label for="user_login">Login</label>
    <%= f.text_field :login %>
    <p>Only letters, numbers, and .-_@ please</p>
    </p></div>
    <div class="field"><label for="user_email">Email</label>
    <%= f.text_field :email %></div>
    <div class="field"><label for="user_name">Name</label>
    <%= f.text_field :name %></p></div>
    <div class="field"><label for="user_birthdate">Birthday</label>
    <%= f.date_select(:birthdate, :include_blank => true, :start_year => Date.current.year - 10, :end_year => Date.current.year - 80, :order => [:day, :month, :year]) -%></p></div>
    <div class="field"><label for="user_country">Country</label>
    <%= f.country_select :country, nil, :include_blank => true %></p></div>
    <div class="field"><label for="user_location">Location</label>
    <%= f.text_field :location %></p></div>
    <div class="field"><label for="user_homepage">Blog / Homepage</label>
    <%= f.text_field :homepage %></p></div>
    <div class="field"><label for="user_password">Password <i>(leave blank if you don't want to change it)</i></label>
    <%= f.password_field :password %></div>
    <div class="field"><label for="user_password_confirmation">Confirm Password</label>
    <%= f.password_field :password_confirmation %></div>
    <div class="field"><label for="user_current_password">Current password <i>(we need your current password to confirm changes)</i></label>
    <%= f.password_field :current_password %></div>
    <div class="buttons"><%= submit_button(:class => 'primary') do
      image_tag("silk/tick.png", :alt => "") + 'Update' end %></div>
  </fieldset>

<% end -%>

<%= render :partial => "devise/shared/links" %>
