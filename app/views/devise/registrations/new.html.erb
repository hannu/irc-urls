<h2>Sign up</h2>

<% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
  <fieldset>
    <h2>Public information</h2>
    <div class="field"><label for="user_login">Username</label>
    <%= f.text_field :login %>
    <p>Only letters, numbers, and .-_@ please</p></div>

    <div class="field"><label for="user_name">Name</label>
    <%= f.text_field :name %></div>

    <h2>Private information</h2>

    <div class="field"><label for="user_email">Email</label>
    <%= f.text_field :email %>
    <p>We will never show your e-mail on public page. </p></div>

    <div class="field"><label for="user_password">Password</label>
    <%= f.password_field :password %></div>

    <div class="field"><label for="user_password_confirmation">Confirm Password</label>
    <%= f.password_field :password_confirmation %></div>

    <div class="buttons"><%= submit_button(:class => 'primary') do
      image_tag("silk/pencil_add.png", :alt => "") + 'Sign up' end %></div>
  </fieldset>
<% end -%>

<%= render :partial => "devise/shared/links" %>
